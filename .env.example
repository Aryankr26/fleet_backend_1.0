# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fleetdb?schema=public

# JWT Secret (change this in production!)
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Server Port
PORT=4000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Millitrack API (optional)
MILLITRACK_TOKEN=your_millitrack_access_token
MILLITRACK_BASE=https://mvts1.millitrack.com/api/middleMan/getDeviceInfo

# Enable vendor polling (set to true to enable)
ENABLE_VENDOR_POLLER=false